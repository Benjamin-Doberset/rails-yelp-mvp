<div class="container text-center">
  <h1 class="m-4"><%= @restaurant.name %></h1>
  <img src="https://source.unsplash.com/random/?food" alt="restaurant image" style="width: 18rem;">
  <div class="d-flex justify-content-center" >
    <p class="card-text m-4"><%= @restaurant.phone_number %></p>
    <p class="card-text m-4"><%= @restaurant.address %></p>
  </div>
  <div class="card">
    <h5 class="Reviews"></h5>
    <% @restaurant.reviews.each do |reviews| %>
    <div class="d-flex justify-content-center">
      <%= reviews.rating %>
      <i class="fa-solid fa-star"></i>
    </div>
    <div class="m-2"><%= reviews.content %></div>
    <% end %>
  </div>
  <div>
  <%= link_to "Back to list", restaurants_path, class: "btn btn-primary"  %>
  <%= link_to "Give a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"  %>
  </div>
</div>
